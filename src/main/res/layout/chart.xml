<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <axl.com.trendchart.mychart.NewCombinedChart
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/newCombinedChart"/>


    <axl.com.trendchart.mychart.NewCombinedChart
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:id="@+id/newCombinedChart2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newCombinedChart"/>

    <axl.com.trendchart.mychart.NewCombinedChart
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="100dp"
            android:id="@+id/newCombinedChart3"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newCombinedChart2"/>
</android.support.constraint.ConstraintLayout>